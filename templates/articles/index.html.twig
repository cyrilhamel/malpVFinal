    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>NomArticle</th>
                <th>TexteArticle</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.nomArticle }}</td>
                <td>{{ article.texteArticle }}</td>
                <td>
                    <a href="{{ path('app_articles_show', {'id': article.id}) }}">afficher</a>
                    <a href="{{ path('app_articles_edit', {'id': article.id}) }}">editer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">pas d'article trouv√©</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_articles_new') }}">Creer un nouvel article</a>
{% endblock %}
